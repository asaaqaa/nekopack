    local zippath

    zippath="ZedThon1.zip"

    echo "âŒ­ Ø¬Ø§Ø±ÙŠ ØªÙ†Ø²ÙŠÙ„ Ø§ÙƒÙˆØ§Ø¯ Ø§Ù„Ø³ÙˆØ±Ø³ âŒ­"

    wget -q $(_get_ziplink) -O "$zippath"

    echo "âŒ­ ØªÙØ±ÙŠØº Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª âŒ­"

    CATPATH=$(zipinfo -1 "$zippath" | grep -v "/.");

    unzip -qq "$zippath"

    echo "âŒ­ ØªÙ€Ù… Ø§Ù„ØªÙØ±ÙŠÙ€Øº âŒ­"

    echo "âŒ­ ÙŠØªÙ… Ø§Ù„ØªÙ†Ø¸ÙŠÙ âŒ­"

    rm -rf "$zippath"

    sleep 5

    _run_catpack_git

